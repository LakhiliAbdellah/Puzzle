<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:id="@+id/backgroundAcceuil">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:layout_gravity="left|bottom"
        android:clickable="true"
        android:background="@drawable/retour"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:layout_width="215dp"
        android:layout_height="170dp"
        android:id="@+id/imageButton1"
        android:layout_gravity="center_horizontal|bottom"
        android:clickable="true"
        android:background="@drawable/fondd"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="100dp"/>

    <ImageButton
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:id="@+id/imageButton3"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="@drawable/fonddd"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="30dp"/>

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="start"
        android:clickable="true"
        android:background="@drawable/fond"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:background="@drawable/playjeu"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center"
        android:background="@drawable/takephoto"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="25dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/selectimage"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="135dp"/>

</FrameLayout>
